<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CampaignFinanceNew.CreateName">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="500">
            <Label HorizontalOptions="Center" x:Name="titleLabel" Text=""/>
            <Label HorizontalOptions="Center" x:Name="firstNameLabel"  Text="First Name"/>
            <Entry HorizontalOptions="Center" WidthRequest="250"  x:Name="firstNameField"/>
            <Label HorizontalOptions="Center" x:Name="lastNameLabel" Text="Last Name"/>
            <Entry HorizontalOptions="Center" WidthRequest="250"   x:Name="lastNameField"/>
            <StackLayout WidthRequest="250" HorizontalOptions="Center"  Orientation="Horizontal">
            <Button Clicked="ChangeWindows" ClassId="Back" HorizontalOptions="Start" Text="Go Back"/><Button Clicked="ChangeWindows"  ClassId="Next" HorizontalOptions="EndAndExpand" Text="Next"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
