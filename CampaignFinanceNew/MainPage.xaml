<?xml version="1.0" encoding="utf-8"?>
<ContentPage BackgroundColor="Navy"   xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:CampaignFinanceNew" x:Class="CampaignFinanceNew.MainPage">
    
    
   
    <StackLayout VerticalOptions="Center">
        
        
        <Image x:Name="titleImage" Scale="2"/> 
        <Button BackgroundColor="Transparent" TextColor="White"  ClassId="0" Clicked="ShowOptions" Text="I am a Returning User" x:Name="returningUser"/>
        <Label TextColor="White" x:Name="eMailLabel" Text="E-Mail" HorizontalOptions="Center"/>
        <Entry x:Name="eMailField" Keyboard="Email" WidthRequest="300"  />
        <Label TextColor="White"   Text="Password" x:Name="passwordLabel" HorizontalOptions="Center"/>
        <Entry WidthRequest="300"  x:Name="passwordField"/>
        <Button BackgroundColor="Transparent" TextColor="White" x:Name="loginButton" Text="Login"/>
        <Button BackgroundColor="Transparent" TextColor="White" ClassId="1" Clicked="ShowOptions" Text="I am a New User" />
        <Button BackgroundColor="Transparent" TextColor="White" x:Name="supporterButton" Text="I want to support candidates"/>
        <Button BackgroundColor="Transparent" TextColor="White" x:Name="candidateButton" Text="I am a candidate" />
    
        
        
    </StackLayout>

</ContentPage>