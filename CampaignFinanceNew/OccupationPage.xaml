<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="Navy" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CampaignFinanceNew.OccupationPage">
    <ContentPage.Content>
        
         <RelativeLayout HorizontalOptions="Center" Padding="0" FlowDirection="MatchParent">
         <Image Aspect="AspectFill" x:Name="backImage" Source="" RelativeLayout.WidthConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Width}"
            RelativeLayout.HeightConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Height}"/>
        
        
        
        
        <StackLayout Margin="20,50,20,0" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Label HorizontalTextAlignment="Center" FontSize="25" FontFamily="{StaticResource TypewriterFont}" TextColor="White" Text="Occupation"/>
            <Label FontFamily="{StaticResource TypewriterFont}" TextColor="White" Text="Please enter your current occupation as well as the name, city, and state of your employer"/>
            <Label FontSize="24" Text=" "/>
            <Label x:Name="jobTitleLabel" HorizontalTextAlignment="Center" FontFamily="{StaticResource TypewriterFont}" TextColor="White" Text="Job Ttile"/>
            <Entry x:Name="jobTitleEntry">
                 <Entry.TextColor>
                        <OnPlatform x:TypeArguments="Color" Android="White" iOS="Black"/>
                    </Entry.TextColor> 
                </Entry>
            <Label x:Name="employerLabel" HorizontalTextAlignment="Center" FontFamily="{StaticResource TypewriterFont}" TextColor="White" Text="Name of Employer"/>
            <Entry x:Name="employerEntry">
                 <Entry.TextColor>
                        <OnPlatform x:TypeArguments="Color" Android="White" iOS="Black"/>
                    </Entry.TextColor> 
                </Entry>
            <Label x:Name="cityLabel" HorizontalTextAlignment="Center" FontFamily="{StaticResource TypewriterFont}" TextColor="White" Text="City"/>
            <Entry x:Name="cityEntry">
                 <Entry.TextColor>
                        <OnPlatform x:TypeArguments="Color" Android="White" iOS="Black"/>
                    </Entry.TextColor> 
                </Entry>
            <Label x:Name="stateLabel" HorizontalTextAlignment="Center" FontFamily="{StaticResource TypewriterFont}" TextColor="White" Text="State"/>
            <Picker x:Name="statePicker" Margin="50,0,50,0">
                 <Picker.TextColor>
                        <OnPlatform x:TypeArguments="Color" Android="White" iOS="Black"/>
                    </Picker.TextColor> 
                </Picker>
            <Label FontSize="28" Text=""/>
             <StackLayout WidthRequest="250" HorizontalOptions="Center"  Orientation="Horizontal">
            <Button x:Name="goBackButton" FontFamily="{StaticResource TypewriterFont}" TextColor="#9fc2fc" BackgroundColor="Transparent" ClassId="Back" HorizontalOptions="Start" FontSize="Large" Text="Go Back"/><Button FontSize="Large" FontFamily="{StaticResource TypewriterFont}" x:Name="nextButton" TextColor="#9fc2fc" BackgroundColor="Transparent" ClassId="Next" HorizontalOptions="EndAndExpand" Text="Next"/>
            </StackLayout>
            
        </StackLayout>
            </RelativeLayout>
    </ContentPage.Content>
</ContentPage>


